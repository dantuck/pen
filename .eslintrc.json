{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": "standard",
  "plugins": ["html"],
  "settings": {
    "html/html-extensions": [".html", ".svelte"]
  },
  "rules": {
    "no-unused-vars": "warn",
    "prefer-const": "warn"
  }
}

